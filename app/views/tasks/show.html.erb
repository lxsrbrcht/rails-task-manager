<h1> <%= @task.title %></h1>
<%= link_to "Update this Task", edit_task_path %>
<p><%= @task.details %></p>
<p><%= link_to "Back to List", tasks_path %></p>
<p>This task is <%= @task.completed ? "complete" : "not complete" %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
